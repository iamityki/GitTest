 [
    {
        "config": {
            "name": "add link and group"
        }
    },
    {
        "test": {
            "name": "/topology/topology/link/add",
            "request": {
                "url": "/topology/topology/link/add",
                "method": "POST",
                "headers": {
                    "Authorization": "Basic YWRtaW46YWRtaW4=",
                    "User-Agent": "Mozilla/5.0 (Windows NT 10.0; WOW64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/64.0.3282.167 Safari/537.36",
                    "Content-Type": "application/json"
                },
                "json": {
                    "userLabel": "$userLabel",
                    "source-node": "${getNodeId($source_node)}",
                    "dest-node": "${getNodeId($dest_node)}",
                    "source-port": "$source_port",
                    "dest-port": "$dest_port",
                    "topo-id": "${getPhysicalDcIdBySPN()}"
                }
            },
            "extract": [
                {"linkId": "content.link-id"}
            ],
            "validate": [
                {
                    "eq": [
                        "status_code",
                        200
                    ]
                },
                {
                    "eq": [
                        "headers.Content-Type",
                        "application/json"
                    ]
                }
            ]
        }
    },
    {
        "test": {
            "name": "/flexe/mgt-group/group",
            "request": {
                "url": "/flexe/mgt-group/group",
                "method": "PUT",
                "headers": {
                    "Authorization": "Basic YWRtaW46YWRtaW4=",
                    "User-Agent": "Mozilla/5.0 (Windows NT 10.0; WOW64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/64.0.3282.167 Safari/537.36",
                    "Content-Type": "application/json"
                },
                "json": {
                    "id": "",
                    "name": "$group_name",
                    "calendar-type": "$calendar_type",
                    "total-bandwidth": 100,
                    "group-id": "$group_id",
                    "nodeA-group-index": 0,
                    "nodeZ-group-index": 0,
                    "nodeA-id": "${getNodeId($source_node)}",
                    "nodeA-member": [
                        "$nodea_member"
                    ],
                    "nodeZ-id": "${getNodeId($dest_node)}",
                    "nodeZ-member": [
                        "$nodeb_member"
                    ],
                    "admin-status": "admin-down",
                    "operate-status": "operate-down",
                    "linkId": "$linkId",
                    "sync-status": ""
                }
            },
            "validate": [
                {
                    "eq": [
                        "status_code",
                        200
                    ]
                }
            ]
        }
    }
]